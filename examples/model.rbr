ROS2Connection LocalROSConn -> {}

TopicBridge FrontSonarTopic -> {
    msgType: "sensor_msgs/Range";
    rosConn: LocalROSConn;
    rosURI: "/sensor/sonar/front";
    brokerConn: MyRedis;
