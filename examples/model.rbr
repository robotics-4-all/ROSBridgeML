    direction: R2B;
}

TopicBridge RearSonarTopic -> {
    msgType: "sensor_msgs/Range";
    rosConn: LocalROSConn;
    rosURI: "/sensor/sonar/rear";
    brokerConn: MyRedis;
    brokerURI: "sensor.sonar.rear";
    direction: B2R;
}

ServiceBridge RearSonarState -> {
